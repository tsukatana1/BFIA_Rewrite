<html>
    <head>
        <link rel="stylesheet" href="/css/index.css" type="text/css">
        <title>Welcome to the BFIA Webpage</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body>
        <div class="img-slideshow">
            <div class="slideshow-item">
                <img src="https://i.imgur.com/D2pdF6K.jpeg" alt="">
                <div class="slideshow-text">
                    <span id="sl-header">Ending Hunger</span>
                    <p>We are devoted to help people from poor areas with food, water, and vital resources.</p>
                    <button class="redirect-button">More</button>
                </div>
            </div>
            <div class="slideshow-item">
                <img src="/css/family_back.jpeg" alt="">
                <div class="slideshow-text">
                    <span id="sl-header">Helping Families</span>
                    <p>Helping families in need to become sucessful and have a purpose at life.</p>
                    <button class="redirect-button">More</button>
                </div>
            </div>
        </div>
        <script type="text/javascript">
        const redirect = document.getElementsByClassName("redirect-button")

        Array.from(redirect).forEach(function(button) {
            button.addEventListener("click", () => {
                window.location.href = '/home'
            })
        })
        </script>
    </body>
</html>