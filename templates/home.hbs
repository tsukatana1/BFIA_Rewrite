        <script type="module">
            import init, { toggle_mode } from '/backend/pkg/backend.js'

            function isElementInViewport(el) {
                var rect = el.getBoundingClientRect();

                return (
                    (rect.top <= 0 
                        && rect.bottom >= 0)
                    ||
                    (rect.bottom >= (window.innerHeight || document.documentElement.clientHeight) && 
                        rect.top <= (window.innnerHeight || document.documentElement.clientHeight))
                    ||
                    (rect.top >= 0 &&
                        rect.bottom <= (window.innerHeight || document.documentElement.clientHeight))
                );
            }

            init().then(() => {
                document.getElementById('mode-toggle').addEventListener('click', () => toggle_mode())

                var scroll = window.requestAnimationFrame || function(callback) { window.setTimeout(callback, 1000/60) };

                var elementsToShow = document.querySelectorAll('.on-scroll')

                function loop() {
                    elementsToShow.forEach(element => {
                        if(isElementInViewport(element)) {
                            element.classList.add('is-scrolled')
                        } else {
                            element.classList.remove('is-scrolled')
                        }
                    });

                    scroll(loop);
                }

                loop()
            })
        </script>
